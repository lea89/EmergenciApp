<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_renglon_drawer"
    android:orientation="vertical"
    android:padding="20dp" >

    <RelativeLayout
        android:id="@+id/relative_renglon_centros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_renglon_centro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/marker_centro" 
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/txt_renglon_centro_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textColor="@color/rojo"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/img_renglon_centro" />

        <TextView
            android:id="@+id/txt_renglon_centro_direccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:textAllCaps="true"
            android:layout_below="@+id/txt_renglon_centro_nombre"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/img_renglon_centro"
            android:textColor="@color/rojo"/>
    </RelativeLayout>

</LinearLayout>